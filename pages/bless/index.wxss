/* pages/bless/index.wxss */
page {
    background-color: #f9f9f9;
}
.title {
    text-align: center;
    font-size: 36rpx;
    line-height: 60rpx;
    color: #666;
    margin-top: 20rpx;
}

.friends {
    min-height: 0;
    overflow: hidden;
    width: 700rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.05);
}

.face {
    width: 120rpx;
    height: 160rpx;
    float: left;
    margin: 20rpx 10rpx;
    text-align: center;
}
.face text {
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #666;
    width: 120rpx;
    margin: 0 auto;
    display: inline-block;
    white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.face image {
    width: 110rpx;
    height: 110rpx;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    margin-bottom: 5rpx;
    border-radius: 50%;
}

.btn_zone {
    padding: 50rpx 25rpx;
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;
    min-height: 0;
    overflow: hidden;
    margin-top: 20rpx;
}

.zan {
    width: 340rpx;
}

.share {
    width: 340rpx;
}

.bless_img {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}

.bless_img image {
    width: 200rpx;
    height: 200rpx;
}

.tips {
    text-align: center;
    font-size: 25rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #ccc;
}
.btn_zone button {
    border: none;
    background-color: none
}

.zhufu_btn {
    background-image: linear-gradient(135deg, #fc679b 0%, #e2175f 100%);
    box-shadow: 0 20rpx 30rpx -6rpx rgba(234, 47, 91, 0.5);
    outline: none;
    border: none;
    color: #fff;
}

.share_btn {
    background-image: linear-gradient(135deg, #ABDCFF 0%, #0396FF 100%);
    box-shadow: 0 20rpx 30rpx -6rpx rgba(30, 161, 255, 0.5);
    outline: none;
    border: none;
    color: #fff!important;
}
action-sheet-item,action-sheet-cancel {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
}

.share-btn {
    border: none;
    border-radius: 0;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    background-color: #fff;
}
.share-btn:after {
    border: none;
    border-radius: 0;
}
